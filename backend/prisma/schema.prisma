// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String
  price         Int
  originalPrice Int?
  image         String   // Primary image (first in images array)
  images        String[] @default([])  // All product images (max 6)
  categoryId    String
  inStock       Boolean  @default(true)
  quantity      Int      @default(0)
  badge         String?
  specs         String[] // Array of specs
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  isFeatured    Boolean  @default(false)
  
  category      Category    @relation(fields: [categoryId], references: [id])
  orderItems    OrderItem[]
  procurements  Procurement[]
  wholesaleItems WholesaleOrderItem[]
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  icon      String?
  active    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  products  Product[]
}

model Order {
  id           String      @id @default(uuid())
  orderNumber  String      @unique
  customerId   String?     // Optional link to persistent customer record
  customerName String
  email        String?     // Optional customer email
  phone        String
  city         String
  address      String
  status       OrderStatus @default(PENDING)
  total        Int
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  
  customer     Customer?   @relation(fields: [customerId], references: [id])
  items        OrderItem[]
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String?  
  phone     String   @unique
  city      String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders    Order[]
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Int     // Price at time of purchase
  
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
  RETURNED
}

model City {
  id           String  @id @default(uuid())
  name         String  @unique
  shippingFee  Int
  deliveryTime String
  active       Boolean @default(true)
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("editor")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  procurements Procurement[]
  capitalEntries CapitalEntry[]
}

model Supplier {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String?
  city      String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  procurements Procurement[]
}

model Procurement {
  id                String   @id @default(uuid())
  supplierId        String
  productId         String
  quantityPurchased Int
  unitCostPrice     Int
  totalCost         Int      // quantityPurchased * unitCostPrice
  purchaseDate      DateTime @default(now())
  createdByAdminId  String?

  supplier Supplier @relation(fields: [supplierId], references: [id])
  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  admin    Admin?   @relation(fields: [createdByAdminId], references: [id])

  @@index([supplierId])
  @@index([productId])
  @@index([createdByAdminId])
}

model Contact {
  id        String        @id @default(uuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  status    ContactStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

enum ContactStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

